<h1>Listing albums</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Project</th>
    <th>Genre</th>
    <th>Label</th>
    <th>Comment</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @albums.each do |album| %>
  <tr>
    <td><%= album.title %></td>
    <td><%= album.project.name %></td>
    <td><%= album.genre.name %></td>
    <td><%= album.label.name %></td>
    <td><%= album.comment.slice(0, 30) %></td>
    <td><%= link_to 'Show', album %><br/>
    <%= link_to 'Edit', edit_album_path(album) %><br/>
    <%= link_to 'Destroy', album, confirm: 'Are you sure?', method: :delete %>
    </td>
  </tr>
<% end %>
</table>

